<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/agli_adapter_relay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/dm_10">

        <ImageView
            android:id="@+id/page_thumbnail"
            android:layout_width="@dimen/dm_64"
            android:layout_height="@dimen/dm_64"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dm_10"/>

        <TextView
            android:id="@+id/page_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_thumbnail"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:text="@string/page_title_text"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:visibility="visible"/>
    </LinearLayout>

</RelativeLayout>