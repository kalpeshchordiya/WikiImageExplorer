<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/placeCard"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:stateListAnimator="@drawable/lift_on_touch"
    card_view:cardElevation="@dimen/dm_5"
    card_view:cardPreventCornerOverlap="false"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:id="@+id/agli_adapter_relay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/page_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dm_100"
            android:layout_gravity="center"
            android:transitionName="cardImage"/>

        <TextView
            android:id="@+id/page_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/page_thumbnail"
            android:background="#7c4dff"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="2"
            android:text="@string/page_title_text"
            android:textColor="@color/full_white"
            android:textSize="14sp"
            android:textStyle="bold"
            android:transitionName="pageTitleTransition"
            android:visibility="visible"/>
    </LinearLayout>

</android.support.v7.widget.CardView>
